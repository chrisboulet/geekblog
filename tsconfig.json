{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path Aliases (si configuré dans vite.config.ts) */
    "baseUrl": ".",
    "paths": {
      // "@/*": ["src/*"]
    }
  },
  "include": ["src", "vite.config.ts"], // Inclure vite.config.ts pour le typage
  "references": [{ "path": "./tsconfig.node.json" }] // Optionnel, pour la config spécifique à Node si besoin
}
